<%= form_with(model: resource, class: "contents") do |form| %>
  <% if resource.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(resource.errors.count, "error") %> prohibited this resource from being saved:</h2>

      <ul class="list-disc ml-6">
        <% resource.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": resource.errors[:name].none?, "border-red-400 focus:outline-red-600": resource.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :entity_type %>
    <%= form.text_field :entity_type, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": resource.errors[:entity_type].none?, "border-red-400 focus:outline-red-600": resource.errors[:entity_type].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :is_visible %>
    <%= form.checkbox :is_visible, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": resource.errors[:is_visible].none?, "border-red-400 focus:outline-red-600": resource.errors[:is_visible].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
