<div id="<%= dom_id resource %>" class="my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= resource.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Entity type:</strong>
    <%= resource.entity_type %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Is visible:</strong>
    <%= resource.is_visible? ? "Yes" : "No" %>
  </div>
</div>
