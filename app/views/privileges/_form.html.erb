<%= form_with(model: privilege, class: "contents") do |form| %>
  <% if privilege.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(privilege.errors.count, "error") %> prohibited this privilege from being saved:</h2>

      <ul class="list-disc ml-6">
        <% privilege.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :permission_id %>
    <%= form.text_field :permission_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": privilege.errors[:permission_id].none?, "border-red-400 focus:outline-red-600": privilege.errors[:permission_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :operation_id %>
    <%= form.text_field :operation_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": privilege.errors[:operation_id].none?, "border-red-400 focus:outline-red-600": privilege.errors[:operation_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :resource_id %>
    <%= form.text_field :resource_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": privilege.errors[:resource_id].none?, "border-red-400 focus:outline-red-600": privilege.errors[:resource_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
